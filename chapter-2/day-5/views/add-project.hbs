        <!--Start blog form-->
        <div class="form-project">
            <h2>ADD MY PROJECT</h2>
            <form action="/add-project" method="post"> 
              <div class="form-title">
                <label for="projectName">Project Name</label>
                <input class="form-box" type="text" id="projectName" name="projectName">
              </div>

            <!--date-->
              <div class="form-date">
                <div class="date">
                  <div class="start-date">
                    <label for="startDate">Start Date</label>
                    <input class="form-box" type="Date" id="startDate" name="startDate">
                  </div>
                  <div class="end-date">
                    <label for="endDate">End Date</label>
                    <input class="form-box" type="Date" id="endDate" name="endDate">
                  </div>
                </div>
              </div>

            <!--Description-->
              <div class="form-description">
                <label for="description">Description</label>
                <textarea class="textarea-box" id="description" name="description"></textarea>
              </div>
              <!-- Technologies -->
              <div class="form-technoligies">
                <label for="technologies">Technologies</label>

                <div class="technologies">
                  <div class="tech-left">
                    <div class="nodeJs">
                      <input type="checkbox" id="nodeJs" value="node" name="nodeJs">
                      <label for="nodeJs">Node JS</label>
                    </div>
                    <div class="reactJs">
                      <input type="checkbox" id="reactJs" value="react" name="reactJs">
                      <label for="reactJs">React JS</label>
                    </div>
                  </div>
                  
                  <div class="tech-right">
                    <div class="html">
                      <input type="checkbox" id="html5" value="html5" name="html5">
                      <label for="html5">Next Js</label>
                    </div>
                    <div class="css">
                      <input type="checkbox" id="html5" value="css3" name="css3">
                      <label for="css3">Type Script</label>
                    </div>
                  </div>
                </div>
              </div>

              <!--project img-->
              <div class="form-img" style="margin-bottom: 35px">
                <label for="image">Upload Image</label>
                <div class="input-image">
                  <label for="image">
                    <p>Choose</p>
                    <i class="fa-solid fa-paperclip"></i>
                  </label>
                  <input type="file" id="image" hidden="" name="image">
                </div>
              </div>
              <!--submit button-->
              <div class="btn-submit">
                <button class="button-submit" type="submit">Submit</button>
              </div>
            </form>
          </div>

          <!-- card blog -->
         
    </body>
</html>