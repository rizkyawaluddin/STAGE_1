<html>
    <head>
        <title>Login</title>
        <link rel="stylesheet" href="public/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="blog.js"></script>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
              <a class="navbar-brand" href="#">
                  <img src="/public/assets/logo.png" alt="">
              </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active text-decoration-none font-weight-bold" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/add-project">Add Project</a>
                  </li>
                  </li>
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {{#if isLogin }}
                    {{else}}
                    <li class="nav-item">
                      <a class="nav-link active  text-orange" aria-current="page" href="/register">Register</a>
                    </li>
                    {{/if}}
                </ul> 

                <div class="d-flex justify-content-center right-side-nav">
                    <a class="contact-nav text-white" href="/contact">My Contact</a>

                </div>
              </div>
            </div>
          </nav>

          {{!-- Login --}}

           <div class="container-login">
            <h2>Login</h2>
            <form action="/add-project" method="post"> 

              <div class="email-user">
                <label for="email">Email</label>
                <input class="form-box" type="email" id="email" name="email">
              </div>  

              <div class="password">
                <label for="password">Password</label>
                <input class="form-box" type="password" id="password" name="password">
              </div>

              <div class="btn-submit">
                <button class="button-submit" type="submit">Submit</button>
              </div>

            </form>
          </div>


    </body>

</html>